#!/bin/bash

BRANCH=$1
TARGET=$2

if [ -z "$BRANCH" ]
then
	BRANCH=$(git name-rev HEAD | awk '{print $2}')
fi

if [ -z "$TARGET" ]
then
	TARGET="master"
fi

if [ -z "$GIT_LAND_PRE_REBASE" ]
then
	GIT_LAND_PRE_REBASE="true"
fi

git checkout --force $BRANCH && \
	$GIT_LAND_PRE_REBASE && \
	git rebase $TARGET && \
	git checkout --force $TARGET && \
	git merge $BRANCH && \
	git branch --delete $BRANCH
