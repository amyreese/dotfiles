[core]
    editor = vim
    excludesfile = ~/.gitignore

[alias]
    sync = !git branchless sync --pull
    new = !git checkout main && git checkout -b
    files = show --pretty="" --name-status
    st = status -sb
    ci = commit
    cu = !git add -u && git commit
    co = checkout
    di = diff
    cdi = diff --cached
    rmc = rm --cached
    br = branch
    rb = rebase
    rba = rebase --abort
    rbc = rebase --continue
    rbi = rebase --interactive
    pullr = pull --rebase
    fp = format-patch --binary
    fpo = format-patch --binary --stdout
    pick = cherry-pick
    pop = stash pop
    sm = !git submodule
    smi = !git submodule update --init --recursive
    up = !git pullr && git smi

[branch]
    autosetuprebase = local

[color]
    branch = auto
    diff = auto
    grep = auto
    interactive = auto
    status = auto
    ui = auto

[commit]
    cleanup = scissors

[diff]
    algorithm = histogram
    colorMoved = true
    colorMovedWS = allow-indentation-change

[fetch]
    prune = true

[help]
    autocorrect = -1

[init]
    defaultBranch = main

[log]
    date = iso

[merge]
    conflictstyle = zdiff3

[pull]
    ff = only

[push]
    autoSetupRemote = true
    default = upstream

[rebase]
    autosquash = true
    autostash = true
    updateRefs = true

[safe]
    bareRepository = explicit

# plugins

[branchless "restack"]
    preserveTimestamps = true
[branchless "next"]
    interactive = true
[branchless "smartlog"]
    defaultRevset = ((branches() | @) % main()) | branches() | @
[rerere]
    enabled = true
