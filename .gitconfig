[core]
	editor = vim
	excludesfile = ~/.gitignore

[alias]
	ignore = update-index --assume-unchanged
	unignore = update-index --no-assume-unchanged
	amend = commit --amend
	fixup = commit --amend --no-edit
	st = status -sb
	ci = commit
	cu = !git add -u && git commit
	co = checkout
	di = diff
	cdi = diff --cached
	rmc = rm --cached
	br = branch
	rb = rebase
	rba = rebase --abort
	rbc = rebase --continue
	rbi = rebase --interactive
	pullr = pull --rebase
	fp = format-patch --binary
	fpo = format-patch --binary --stdout
	pick = cherry-pick
	pop = stash pop
	sm = !git submodule
	smi = !git submodule update --init --recursive
	up = !git pullr && git smi

[branch]
	autosetuprebase = local

[color]
	branch = auto
	diff = auto
	grep = auto
	interactive = auto
	status = auto
	ui = auto

[commit]
    cleanup = scissors

[diff]
    algorithm = histogram
    colorMoved = true
    colorMovedWS = allow-indentation-change

[fetch]
    prune = true

[help]
	autocorrect = -1

[init]
	defaultBranch = main

[log]
    date = iso

[merge]
    conflictstyle = zdiff3

[pull]
	ff = only

[push]
    autoSetupRemote = true
	default = upstream
    followtags = true

[rebase]
    autosquash = true
    autostash = true

[safe]
	bareRepository = explicit

# plugins

[branchless "restack"]
	preserveTimestamps = true
[branchless "next"]
	interactive = true
[branchless "smartlog"]
	defaultRevset = ((branches() | @) % main()) | branches() | @
