autodetach		on
crlf			off
startup_message		off
shell			-zsh
defmonitor		on
activity		"<%n>"
caption always "%{= dd}%{+b ky}%{+ .b} $LOGNAME@%H %{-} %{.y}%-w%50>%{+ Kg} %n %t %{-}%+w%<%{-}"

# 256 color support
attrcolor		b ".I"
termcapinfo		xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
defbce			on
term			xterm

bind \ quit
